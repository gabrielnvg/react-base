- var { metaTags } = htmlWebpackPlugin.options
- ogImage = require("./assets/images/share.jpg").default;

doctype
html(lang="en")
  head
    title Some title
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='theme-color', content=metaTags.themeColor)
    meta(http-equiv='X-UA-Compatible' content='ie=edge,chrome=1')
    //- Facebook
    meta(property='fb:app_id', content=metaTags.fbAppId)
    meta(property='og:image', content=ogImage)
    meta(property='og:image:secure_url', content=ogImage.replace('http:', 'https:'))
    meta(property='og:image:type' content='image/jpeg')
    meta(property='og:image:width' content='600')
    meta(property='og:image:height' content='315')
    meta(property='og:image:alt', content=metaTags.ogImageAlt)
    //- Twitter
    meta(property='twitter:image', content=ogImage)

  body
    noscript You need to enable JavaScript to run this app.
    #root
